meta {
  name: Create Game
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/createGame
  body: json
  auth: none
}

body:json {
  {
    "creatorName": "HostPlayer",
    "ageOfYoungestPlayer": 10,
    "language": "de-DE"
  }
}

vars:post-response {
  gameId: res.body.gameId
  hostSecret: res.body.playerSecret
  joinCode: res.body.joinCode
}
